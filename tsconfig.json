{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "rootDirs": [
      "src",
      "src/__tests__"
    ],
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}